#include<stdio.h>
int main()
{   int x=1;
    for(int i=1; i<=5; i++) {

        for(int j=4; j>=i; j--) { printf(" ");}

        for(int k=1; k<=(i*2)-1; k++) {printf("*");}

        printf("\n");
    }

    for(int i=4; i>0; i--) {

        for(int j=4; j>=i; j--) {printf(" ");}
        //i=4, j=4, // i=3//j=4,3// i=2, j=4,3,2// i=1, j==4,3,2,1

        for(int k=1; k<=(i*2)-1; k++) {printf("*");}

        printf("\n");
    }


    return 0;
}
